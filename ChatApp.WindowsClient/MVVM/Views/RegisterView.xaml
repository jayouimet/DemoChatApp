<UserControl x:Class="ChatApp.WindowsClient.MVVM.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:ChatApp.WindowsClient.MVVM.Views"
             xmlns:vm="clr-namespace:ChatApp.WindowsClient.MVVM.ViewModels"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="100, 0" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Register"
               FontSize="24"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

        <TextBox Grid.Row="1"
             materialDesign:HintAssist.Hint="Username"
             Text="{Binding Username}"
             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
             Margin="0,0,0,10"/>
        
        <TextBox Grid.Row="2"
             materialDesign:HintAssist.Hint="Email"
             Text="{Binding Email}"
             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
             Margin="0,0,0,10"/>

        <PasswordBox Grid.Row="3"
                 x:Name="PasswordBox"
                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                 materialDesign:HintAssist.Hint="Password"
                 PasswordChanged="PasswordBox_PasswordChanged"
                 Margin="0,0,0,10"/>

        <PasswordBox Grid.Row="4"
                 x:Name="ConfirmPasswordBox"
                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                 materialDesign:HintAssist.Hint="Confirm password"
                 PasswordChanged="PasswordBox_ConfirmPasswordChanged"
                 Margin="0,0,0,10"/>

        <TextBlock 
            Grid.Row="5"
            HorizontalAlignment="Left" 
            Margin="0,10,0,0">
            <Hyperlink
                       Command="{Binding GoToLoginCommand}"
                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                       Cursor="Hand"
                       TextDecorations="None">
                Already have an account? Login
            </Hyperlink>
        </TextBlock>

        <Button Grid.Row="6"
            Content="Register"
            Command="{Binding RegisterCommand}"
            Style="{StaticResource MaterialDesignRaisedButton}"
            HorizontalAlignment="Right"
            Width="100"/>
    </Grid>
</UserControl>
