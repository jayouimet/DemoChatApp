<UserControl x:Class="ChatApp.WindowsClient.MVVM.Views.MainLoadingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.WindowsClient.MVVM.Views"
             xmlns:vm="clr-namespace:ChatApp.WindowsClient.MVVM.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Loading" HorizontalAlignment="Center" FontSize="16"/>
            <ProgressBar 
                IsIndeterminate="True"
                Width="300"
                Height="6"
                Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
